<div class="survey_display">
  <h1><%= @survey.name %></h1>

<form action='/survey/<%= @survey.id %>/vote' method='post'>
  <% @questions.each_with_index do |q, i| %>
    <p><%= q.text %><br>
      <% q.choices.each do |c| %>
      <input type='radio' name='response[<%= i + 1 %>]' value='<%= c.id %>'><%= c.text %><br>
      <% end %>
  <% end %>
  <p><input type='submit' value='submit'></p>
</form>
</div>
